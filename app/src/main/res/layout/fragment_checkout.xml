<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp">

        <!-- ORDER SUMMARY -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:accessibilityHeading="true"
            android:text="@string/order_summary"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:targetApi="28" />

        <!-- ORDER ITEMS LIST -->

        <!-- TOTALS CARD (red background, white text) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/summaryList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            tools:listitem="@layout/item_checkout_line" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/totalsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/redAccent"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@android:color/darker_gray"
            app:cardUseCompatPadding="true"
            app:cardForegroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/subtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:text="Subtotal: $34.47" />

                <TextView
                    android:id="@+id/tax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    tools:text="Tax and Fees: $2.76" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:text="Total: $37.23" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- PAYMENT METHOD -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:accessibilityHeading="true"
            android:text="@string/payment_method"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:targetApi="28" />

        <!-- CARD DETAILS -->
        <EditText
            style="@style/FormEditText"
            android:id="@+id/cardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="John Smith"
            android:hint="@string/card_holder_full_name"
            android:textColor="#212121"
            android:textColorHint="#616161"
            android:inputType="textPersonName"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                style="@style/FormEditText"
                android:id="@+id/cardNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:digits="0123456789"
                android:hint="@string/credit_card"
                android:imeOptions="actionNext"
                android:textColor="#212121"
                android:textColorHint="#616161"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="19"
                android:maxLines="1"
                app:emojiCompatEnabled="false" />

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp" />

            <EditText
                style="@style/FormEditText"
                android:id="@+id/expiry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="MM/YY"
                android:digits="0123456789/"
                android:hint="@string/expiry_date"
                android:textColor="#212121"
                android:textColorHint="#616161"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="5"
                android:maxLines="1"
                app:emojiCompatEnabled="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                style="@style/FormEditText"
                android:id="@+id/cvv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="123"
                android:textColor="#212121"
                android:textColorHint="#616161"
                android:hint="@string/ccv"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:maxLines="1" />

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp" />

            <EditText
                style="@style/FormEditText"
                android:id="@+id/zip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="zip code"
                android:hint="@string/billing_zip_code"
                android:textColor="#212121"
                android:textColorHint="#616161"
                android:inputType="number"
                android:maxLength="5"
                android:maxLines="1" />
        </LinearLayout>

        <!-- DELIVERY INFORMATION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:accessibilityHeading="true"
            android:text="@string/delivery_information"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:targetApi="28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                style="@style/FormEditText"
                android:id="@+id/firstName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="first name"
                android:hint="@string/first_name"
                android:textColor="#212121"
                android:textColorHint="#616161"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp" />

            <EditText
                style="@style/FormEditText"
                android:id="@+id/lastName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="last name"
                android:hint="@string/last_name"
                android:textColor="#212121"
                android:textColorHint="#616161"
                android:inputType="textPersonName" />
        </LinearLayout>

        <EditText
            style="@style/FormEditText"
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:autofillHints="postalAddress"
            android:hint="@string/address_line_1"
            android:textColor="#212121"
            android:textColorHint="#616161"
            android:inputType="textPostalAddress" />

        <EditText
            style="@style/FormEditText"
            android:id="@+id/address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="postalAddress"
            android:hint="@string/address_line_2"
            android:textColor="#212121"
            android:textColorHint="#616161"
            android:inputType="textPostalAddress" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                style="@style/FormEditText"
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="city"
                android:hint="@string/city"
                android:textColor="#212121"
                android:textColorHint="#616161"
                android:inputType="text" />

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp" />

            <EditText
                style="@style/FormEditText"
                android:id="@+id/state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:autofillHints="state"
                android:hint="@string/state"
                android:textColor="#212121"
                android:textColorHint="#616161"
                android:inputType="text" />

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp" />

            <EditText
                style="@style/FormEditText"
                android:id="@+id/shipZip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:autofillHints="zip code"
                android:hint="@string/zip_code"
                android:textColor="#212121"
                android:textColorHint="#616161"
                android:inputType="number" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:accessibilityHeading="true"
            android:text="@string/special_instructions"
            android:textStyle="bold"
            tools:targetApi="28" />

        <EditText
            style="@style/FormEditText"
            android:id="@+id/deliveryNotes"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:autofillHints="Delivery Instructions"
            android:background="@android:drawable/edit_text"
            android:gravity="top"
            android:hint="@string/leave_at_the_door_please"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:inputType="textMultiLine" />

        <!-- ACTIONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                style="@style/FormButton"
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E53935"
                android:text="@string/cancel"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <Button
                style="@style/FormButton"
                android:id="@+id/btnPlaceOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#66BB6A"
                android:text="@string/place_order"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Demo disclaimer -->
        <TextView
            android:id="@+id/tvDisclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:text="@string/demo_disclaimer"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <!-- Privacy & Terms link -->
        <TextView
            android:id="@+id/tvPrivacyTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:text="@string/privacy_terms_link"
            android:textColor="@color/redAccent"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>