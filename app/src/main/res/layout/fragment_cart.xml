<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Content state -->
    <LinearLayout
        android:id="@+id/contentGroup"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="yes">

        <TextView
            android:id="@+id/cartHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heading_order_summary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:accessibilityHeading="true"
            android:paddingBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cartList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            android:contentDescription="@string/heading_order_summary" />

        <!-- Totals (announce politely when they change) -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:accessibilityLiveRegion="polite">

            <TextView
                android:id="@+id/subtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Subtotal:" />

            <TextView
                android:id="@+id/tax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tax:" />

            <TextView
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Total:" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:text="@string/clear_cart" />

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/btnCheckout"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:text="@string/checkout" />
        </LinearLayout>
    </LinearLayout>

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/emptyGroup"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:accessibilityLiveRegion="polite">

        <TextView
            android:id="@+id/emptyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cart_empty_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp"
            android:accessibilityHeading="true" />

        <TextView
            android:id="@+id/emptySub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cart_empty_sub"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/btnBrowseMenu"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:text="@string/browse_menu" />
    </LinearLayout>

</FrameLayout>